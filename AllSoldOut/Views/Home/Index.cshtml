@{
    @model IEnumerable<AllSoldOut.Models.Product>
    @using Microsoft.AspNetCore.Http;
    ViewData["Title"] = "Home Page";

}

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                    <div class="section-nav">
                        <ul class="section-tab-nav tab-nav">
                            <li class="active"><a data-toggle="tab" href="#tab1">Smartphones</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            <div class="col-md-12">
                <div class="row">
                    <div class="products-tabs">
                        <!-- tab -->
                        <div id="tab1" class="tab-pane active">
                            <div class="products-slick" data-nav="#slick-nav-1">
                                @{
                                    if (ViewBag.successMessage != null)
                                    {
                                        <p class="text-center alert alert-success"><strong>@ViewBag.successMessage</strong></p>
                                    }
                                }
                                <!-- product -->

                                @foreach (var item in Model)
                                {
                                    <div class="product">
                                        <div class="product-img">
                                            @{
                                                string path = Url.Content("~/Files/" + (item.productImageName).ToString() + ".png");
                                            }
                                            <img class="img-fluid" src="@path" alt="" style="width:10em; height:15em;">
                                            <div class="product-label">
                                                <span class="new">NEW</span>
                                            </div>
                                        </div>
                                        <div class="product-body">
                                            <p class="product-category">@Html.DisplayFor(modelItem => item.productCategory)</p>
                                            <h3 class="product-name"><a href="#">@Html.DisplayFor(modelItem => item.productName)</a></h3>
                                            <h4 class="product-price">$@Html.DisplayFor(modelItem => item.productPrice) </h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product-btns">
                                                <a asp-action="Details" asp-route-id=@item.productId><button class="quick-view"><i class="fa fa-eye" action></i><span class="tooltipp">quick view</span></button></a>
                                            </div>
                                        </div>

                                    </div>
                                }

                                <!-- /product -->
                            </div>
                            <div id="slick-nav-1" class="products-slick-nav"></div>
                        </div>
                        <!-- /tab -->
                    </div>
                </div>
            </div>
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
